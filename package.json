{
  "name": "mern-testing",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "install-all": "npm install --workspaces",
    "test": "jest",
    "test:unit": "jest --testPathPattern=\"(unit|tests/unit)\"",
    "test:integration": "jest --testPathPattern=\"(integration|tests/integration)\"",
    "test:e2e": "npm run test:e2e -w client",
    "coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  }
}

